<!DOCTYPE html>
<html>

<head>
	<title>Puxika</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<style>
		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
		}

		a {
			color: #333;
			text-decoration: none;
		}

		button,
		.button {
			background-color: #f44336;
			border: none;
			color: white;
			cursor: pointer;
			padding: 12px 20px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;
			margin: 4px 2px;
			transition-duration: 0.4s;
			border-radius: 4px;
		}

		button:hover,
		.button:hover {
			background-color: #d32f2f;
		}

		header {
			background-color: #fff;
			box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
			padding: 16px;
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			z-index: 999;
		}

		nav ul {
			list-style: none;
			margin: 0;
			padding: 0;
		}

		nav li {
			display: inline-block;
			margin-right: 16px;
		}

		nav a {
			font-size: 18px;
		}

		#Janaria-display {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
		}

		.janaria {
			display: flex;
			flex-direction: column;
			margin: 10px;
			width: 300px;
			height: 350px;
			background-color: #fff;
			box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
		}

		.janaria img {
			width: 100%;
			height: 200px;
			object-fit: cover;
		}

		.janaria-info {
			padding: 10px;
		}

		.janaria-info h2 {
			margin-top: 0;
			font-size: 24px;
			font-weight: bold;
		}

		.janaria-info p {
			margin-bottom: 0;
			font-size: 18px;
		}

		footer {
			background-color: #333;
			color: #fff;
			padding: 16px;
			text-align: center;
		}
	</style>
</head>

<body>
	<header>
		<nav>
			<ul>
				<li><a href="/">Hasiera</a></li>
				<!-- poner opcion de login en el lado contrario -->
				<li style="float: right; padding-right: 10px;"><%-html.login_logout%></li>
				<li style="float: right; padding-right: 10px;">
					<%=uname%>
				</li>
			</ul>
		</nav>
	</header>

	<main>
		<section id="Janaria-display" style="margin-top: 2cm; margin-bottom: 1.1cm;">
			<% html.foods.forEach(function(janaria) { %>
				<div class="janaria">
					<img id="<%=janaria.Irudia%>" src="/images/<%=janaria.Irudia%>" alt="Janariaren argazkia" />
					<div class="janaria-info" id="<%=janaria.Izena%>">
						<h2>
							<%=janaria.Izena%>
						</h2>
						<p style="font-size: 150%;">
							<%=janaria.Prezioa%> €
						</p>
						<button id="<%=janaria.Izena%>-">-</button>
						<a style="font-size: 150%;" id="<%=janaria.Izena%>-value">0</a>
						<button id="<%=janaria.Izena%>+">+</button>
					</div>
				</div>
				<% }); %>
		</section>
	</main>
	<button class="button" id="Jarraitu" style="margin-left: 26.69cm; margin-bottom: 1cm;">Jarraitu</button>

	<footer>
		<p>© 2023 Puxika. Eskubide guztiak erreserbatuta.</p>
	</footer>
</body>
<script>
	// Botoiak lortu
	var buttons = document.getElementsByTagName("button");
	// Botoi bakoitzari onclick funtzioa gehitu
	for (var i = 0; i < buttons.length; i++) {
		buttons[i].onclick = function () {
			var divId = this.parentNode.id;
			var value = document.getElementById(divId + "-value").innerHTML;
			var newValue = 0;
			if (this.id == divId + "+") {
				newValue = parseInt(value) + 1;
			} else {
				if (value > 0) {
					newValue = parseInt(value) - 1;
				}
			}
			document.getElementById(divId + "-value").innerHTML = newValue;
		};
	}

	// Jarraitu botoia
	document.getElementById("Jarraitu").onclick = function () {
		var janariak = [];
		var values = document.getElementsByTagName("a");
		for (var i = 0; i < values.length; i++) {
			var value = parseInt(values[i].innerHTML);
			if (value > 0) {
				var janaria = {
					izena: values[i].id.split("-")[0],
					prezioa: parseFloat(values[i].parentNode.childNodes[3].innerHTML),
					argazkia: values[i].parentNode.parentNode.childNodes[1].id,
					kopurua: value
				};
				janariak.push(janaria);
			}
		}
		//mirar si janariak ez daude hutsik
		if (janariak.length == 0) {
			alert("Ez duzu janaririk aukeratu");
		} else {
			fetch("/eskaera/jarraitu", {
				method: "POST",
				enctype: "multipart/form-data",
				headers: {
					"Content-Type": "application/json"
				},
				body: JSON.stringify(janariak)
			}).then(response => {
				if (response.ok) {
					window.location.href = '/eskaera/jarraitu';
				} else {
					throw new Error('Error');
				}
			}).catch(error => console.error(error))
		}
	};
</script>

</html>